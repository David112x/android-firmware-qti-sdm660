import os
Import('env')
env = env.Clone()

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "${DAL_ROOT}/framework/sys/src"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0) 

#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_API = [
   'DEBUGTOOLS',
   'SERVICES',
   'MPROC',
   'SYSTEMDRIVERS',   
   # needs to be last also contains wrong comdef.h
   'KERNEL',
   'POWER'
]

env.RequirePublicApi(CBSP_API)
env.RequireRestrictedApi(CBSP_API)
env.RequireRestrictedApi('DAL')

#-------------------------------------------------------------------------------
# Source Code
#-------------------------------------------------------------------------------

env.Append(CPPDEFINES = [
   "DAL_IMAGE_CONFIG_H=\\\"../../dal/config/${MSM_ID}/rpmconfig.h\\\""
])
env.Append(CPPDEFINES = ["DAL_NATIVE_PLATFORM"])

DALSYS_RPM_SOURCES = [
   '${BUILDPATH}/rpm/DALProps.c',
   '${BUILDPATH}/rpm/DevCfg_Init.c',
   '${BUILDPATH}/rpm/dal_stubs.c',
]

if env['MSM_ID'] == '8998':
  env.Append(CPPDEFINES = 'MSM8998_IMAGE_LAYOUT')
elif env['MSM_ID'] == '660':
  env.Append(CPPDEFINES = 'SDM660_IMAGE_LAYOUT')
elif env['MSM_ID'] == '405':
  env.Append(CPPDEFINES = 'QCS405_IMAGE_LAYOUT')
elif env['MSM_ID'] == 'nicobar':
  env.Append(CPPDEFINES = 'SDM_NICOBAR_IMAGE_LAYOUT')
env.AddLibrary(['CORE_RPM'], '${BUILDPATH}/DALSys', DALSYS_RPM_SOURCES)
