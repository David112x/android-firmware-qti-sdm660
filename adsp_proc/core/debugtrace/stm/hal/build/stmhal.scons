Import('env')
import qdss

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"
env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)

#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_APIS = [
   'DEBUGTRACE',
   'SERVICES',
   'HAL',
   'DAL',
   'SYSTEMDRIVERS',
   'KERNEL'
]

env.RequirePublicApi(CBSP_APIS)
env.RequireProtectedApi(['DEBUGTRACE'])
env.RequirePrivateApi('QDSS_STM_HAL')

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

STM_HAL_SRC = ['${BUILDPATH}/halqdss_stm_config.c']


env.AddLibrary(qdss.BuildTags(['rpm', 'modem', 'cdsp','adsp', 'wcn', 'gss', 'apps',
   'sensor', 'audio', 'sensor2']),
   '${BUILDPATH}/stm_hal',STM_HAL_SRC)



