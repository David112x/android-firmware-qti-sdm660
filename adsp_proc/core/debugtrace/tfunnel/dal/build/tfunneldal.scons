Import('env')
import qdss

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"

env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)


#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_APIS = [
   'DEBUGTRACE',
   'SERVICES',
   'HAL',
   'DAL',
   'KERNEL'
]


env.RequirePublicApi(CBSP_APIS)
env.RequireRestrictedApi(CBSP_APIS)
env.RequireProtectedApi(['DEBUGTRACE'])

#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------
TFUNNEL_DAL_SRC = ['${BUILDPATH}/DalTFunnel.c']

env.AddLibrary(qdss.BuildTags(['rpm', 'modem', 'cdsp','adsp', 'wcn', 'gss', 'apps',
   'sensor', 'venus']),
   '${BUILDPATH}/tfunnel_dal',TFUNNEL_DAL_SRC)

qdss_image='cdsp'

if (env['IMAGE'] in ['adsp_slpi','adsp']):
	qdss_image='adsp'
	
if 'USES_DEVCFG' in env:
   DEVCFG_IMG = ['DAL_DEVCFG_IMG']

if 'USES_DEVCFG' in env:
   env.AddDevCfgInfo(['DAL_DEVCFG_IMG'],
                     {
         '845_xml' :['${BUILD_ROOT}/core/debugtrace/tfunnel/config/${IMAGE}/${CHIPSET}/daltfunnel.xml',
                     '${BUILD_ROOT}/core/debugtrace/tfunnel/config/${IMAGE}/${CHIPSET}/tfunnel_config.c'],
		 '660_xml' :['${BUILD_ROOT}/core/debugtrace/tfunnel/config/${IMAGE}/${CHIPSET}/daltfunnel.xml',
                     '${BUILD_ROOT}/core/debugtrace/tfunnel/config/${IMAGE}/${CHIPSET}/tfunnel_config.c'],
         })


