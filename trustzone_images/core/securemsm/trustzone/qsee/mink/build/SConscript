Import('env')

#all mink needs the platform interface:
if env['TARGET_FAMILY'] in ['badger']:
   env.RequireRestrictedApi(['MINK_PLATFORM_API', 'TZLIBARMV7', 'TZCHIPSET'])
else:
   env.RequireRestrictedApi(['MINK_PLATFORM_API', 'TZLIBARMV8', 'TZCHIPSET'])

env.RequireRestrictedApi(['MINK'])

env.RequirePublicApi(['MINK_LK'])
env.Append(CFLAGS = " -Werror ")
#-------------------------------------------------------------------------------
# Load sub scripts
#-------------------------------------------------------------------------------
env.LoadSoftwareUnits()
env.LoadAPIUnits()
env.Deploy(['../include/object.h',
            '../oem/inc/tzbsp_cfg_prop.h',
            'SConscript'])
