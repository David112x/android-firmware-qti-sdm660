      //<var_seq name = "SENSOR_QUP2_GPIO_ADDR"    type=DALPROP_DATA_TYPE_UINT32_SEQ>   0x15073000, 0x15073010, end   </var_seq>
      // SENSOR_UART_2
      <var_seq name = "SENSOR_UART2_GPIO_ADDR"   type=DALPROP_DATA_TYPE_UINT32_SEQ>   0x15077000, 0x15077010, end   </var_seq>

      //SENSOR_SPI_3
