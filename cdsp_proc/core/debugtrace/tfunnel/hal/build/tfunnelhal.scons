Import('env')
import qdss

#-------------------------------------------------------------------------------
# Source PATH
#-------------------------------------------------------------------------------
SRCPATH = "../src"
env.VariantDir('${BUILDPATH}', SRCPATH, duplicate=0)


#-------------------------------------------------------------------------------
# Internal depends within CoreBSP
#-------------------------------------------------------------------------------
CBSP_APIS = [
   'DEBUGTRACE',
   'SERVICES',
   'HAL',
   'DAL',
   'SYSTEMDRIVERS',
   'KERNEL'
]

env.RequirePublicApi(CBSP_APIS)
env.RequireProtectedApi(['DEBUGTRACE'])
env.RequirePrivateApi('QDSS_TFUNNEL_HAL')
#-------------------------------------------------------------------------------
# Sources, libraries
#-------------------------------------------------------------------------------

TFUNNEL_HAL_SRC = [
    '${BUILDPATH}/halqdss_tfunnel.c'
]

env.AddLibrary(qdss.BuildTags(['rpm', 'modem', 'cdsp', 'adsp', 'wcn', 'gss', 'sensor',
   'venus']),
   '${BUILDPATH}/tfunnel_hal',TFUNNEL_HAL_SRC)

